{{ form_start(form,{'attr':{
    'id': form_id|default('facultad_new'),
    'class': 'm-form m-form--state'
}}) }}
<div class="modal-body" id="modal-body">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group m-form__group">
                <label>
                    {{ form_label(form.nombre) }}
                </label>
                <div>
                    {{ form_widget(form.nombre) }}
                    {{ form_errors(form.nombre) }}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group m-form__group">
                <label>
                    {{ form_label(form.idlaboratorio) }}
                </label>
                <div>
                    {{ form_widget(form.idlaboratorio) }}
                    {{ form_errors(form.idlaboratorio) }}
                </div>
            </div>
        </div>
    </div>
    {{ form_errors(form) }}
    {{ form_rest(form) }}
</div>
<div class="modal-footer">
    <a class="btn btn-metal btn-sm" data-dismiss="modal"><i class="flaticon-cancel"></i> {{ 'cancel_button'|trans }}</a>
    <button class="btn btn-primary btn-sm  mt-ladda-btn ladda-button" data-style="expand-right" type="submit">
        <i class="flaticon-edit"></i>
        <span class="ladda-label">{{ action |default('save_button') | trans }}</span>
        <span class="ladda-spinner"></span>
    </button>
</div>
{{ form_end(form) }}