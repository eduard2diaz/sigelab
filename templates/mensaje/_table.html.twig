<table class="table table-hover" id="tablemensaje">
    <thead>
    <tr>
        <th></th>
        <th style="width: 60%">{{ 'description_field'|trans }}</th>
        <th>{{ 'date_field'|trans }}</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% for mensaje in mensajes %}
        <tr>
            <td></td>
            <td>{{ mensaje.descripcion }}</td>
            <td>{{ mensaje.fecha |date('d-m-Y H:i') }}</td>
            <td>
                <ul class="nav nav-pills" >
                    <li class="nav-item m-tabs__item">
                        <a class="btn btn-sm btn-default text-uppercase mensaje_show" data-href="{{ path('mensaje_show', { 'id': mensaje.id }) }}">
                            <i class="flaticon-eye"></i>{{ 'visualize' |trans }}
                        </a>
                    </li>
                    <li class="nav-item m-tabs__item">
                        <a class="btn btn-sm btn-danger text-uppercase eliminar_mensaje" data-href="{{ path('mensaje_delete', { 'id': mensaje.id }) }}">
                            <i class="flaticon-delete-1"></i>{{ 'delete' |trans }}
                        </a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <th></th>
        <th>{{ 'description_field'|trans }}</th>
        <th>{{ 'date_field'|trans }}</th>
        <th></th>
    </tr>
    </tfoot>
</table>
