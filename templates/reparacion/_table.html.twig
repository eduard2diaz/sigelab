<table class="table table-hover" id="tablereparacion">
    <thead>
    <tr>
        <th>{{ 'date_field'|trans }}</th>
        <th>{{ 'typeofrepair'|trans }}</th>
        <th>{{ 'user'|trans }}</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% set i=1 %}
    {% for reparacion in reparaciones %}
        <tr>
            <td>{{ reparacion.fecha |date('d-m-Y') }}</td>
            <td>{{ reparacion.tiporeparacion }}</td>
            <td>{{ reparacion.usuario }}</td>
            {% if readonly is not defined %}
            <td>
                <ul class="nav nav-pills" >
                    <li class="nav-item m-tabs__item">
                        <a class="btn btn-sm btn-default edicionreparacion" data-href="{{ path('reparacion_show', { 'id': reparacion.id }) }}">
                            <i class="flaticon-eye"></i>{{ 'visualize' |trans }}
                        </a>
                    </li>
                    {% if is_granted('ROLE_JEFETECNICO') %}
                    <li class="nav-item m-tabs__item">
                        <a class="btn btn-sm btn-info edicionreparacion" data-href="{{ path('reparacion_edit', { 'id': reparacion.id }) }}">
                            <i class="flaticon-edit-1"></i>{{ 'edit' |trans }}
                        </a>
                    </li>
                    <li class="nav-item m-tabs__item">
                        <a class="btn btn-sm btn-danger eliminar_reparacion" data-href="{{ path('reparacion_delete', { 'id': reparacion.id }) }}">
                            <i class="flaticon-delete-1"></i>{{ 'delete' |trans }}
                        </a>
                    </li>
                    {% endif %}
                </ul>
            </td>
            {% endif %}
        </tr>
        {% set i=1+i %}
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <th>{{ 'date_field'|trans }}</th>
        <th>{{ 'typeofrepair'|trans }}</th>
        <th>{{ 'user'|trans }}</th>
        <th></th>
    </tr>
    </tfoot>
</table>