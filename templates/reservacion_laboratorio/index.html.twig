{% extends 'layout/autenticado.html.twig' %}
{% block title %}{{ 'reservations'|trans }}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css','global') }}" rel="stylesheet"
          type="text/css"/>
    <link href="{{ asset('plugins/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css','global') }}"
          rel="stylesheet" type="text/css"/>
{% endblock %}
{% block body %}
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        {{ 'reservations' | trans }}
                    </h3>
                </div>
            </div>
            <div class="m-portlet__head-tools">

                <ul class="nav nav-pills">
                    <li class="nav-item m-tabs__item">
                        <a class="btn btn-sm btn-primary edicion active" data-href="{{ path('reservacion_laboratorio_new') }}"
                           data-toggle="m-tooltip" data-placement="bottom" title="" data-original-title="{{ 'reservation_register_tooltip'|trans }}">
                            <i class="flaticon-add"></i> {{ 'register' |trans }}
                        </a>
                    </li>
                    <li class="nav-item m-tabs__item">
                        <a class="btn btn-sm btn-default" data-href="{{ path('reservacion_laboratorio_index') }}" id="refrescar">
                            <i class="flaticon-reload"></i>{{ 'refresh' |trans }}
                        </a>
                    </li>

                </ul>
            </div>
        </div>
        <div class="m-portlet__body">
            {% include 'reservacion_laboratorio/_table.html.twig' %}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('plugins/moment.min.js','global') }}"></script>
    {% include 'reservacion_laboratorio/script.js.twig' %}
    <script>
        var total ={{ reservaciones |length }}
            reservacionlaboratorio.init();
    </script>
{% endblock %}
