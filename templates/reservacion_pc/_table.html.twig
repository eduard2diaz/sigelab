<table class="table table-hover" id="table">
    <thead>
    <tr>
        <th>{{ 'row_number' | trans }}</th>
        <th>{{ 'date_field' |trans }}</th>
        <th>{{ 'pc'|trans }}</th>
        <th>{{ 'laboratory'|trans }}</th>
        <th>{{ 'student'|trans }}</th>
        <th style="width: 20%"></th>
    </tr>
    </thead>
    <tbody>
    {%set i=1%}
    {% for reservacion in reservaciones %}
        <tr>
            <td>{{ i }}</td>
            <td>{{ reservacion.fecha|date('d-m-Y H:i') }}</td>
            <td>{{ reservacion.pc }}</td>
            <td>{{ reservacion.pc.laboratorio }}</td>
            <td>{{ reservacion.usuario }}</td>
            <td>
            {%if app.user.id==reservacion.usuario.id%}
                <ul class="nav nav-pills">
                    <li class="nav-item m-tabs__item">
                        <a class="btn btn-sm btn-info edicion"
                           data-href="{{ path('reservacion_pc_edit', { 'id': reservacion.id }) }}">
                            <i class="flaticon-edit"></i>{{ 'edit' |trans }}
                        </a>
                    </li>
                    <li class="nav-item m-tabs__item">
                        <a class="btn btn-sm btn-danger eliminar_reservacionpc"
                           data-href="{{ path('reservacion_pc_delete', { 'id': reservacion.id }) }}">
                            <i class="flaticon-delete"></i>{{ 'delete' |trans }}
                        </a>
                    </li>
                </ul>
                {%endif%}
            </td>
        </tr>
        {%set i=1+i%}
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <th>{{ 'row_number' | trans }}</th>
        <th>{{ 'date_field' |trans }}</th>
        <th>{{ 'pc'|trans }}</th>
        <th>{{ 'laboratory'|trans }}</th>
        <th>{{ 'student'|trans }}</th>
        <th></th>
    </tr>
    </tfoot>
</table>
