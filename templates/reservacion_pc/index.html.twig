{% extends 'layout/autenticado.html.twig' %}
{% block page_title %}{{ 'reservationpc_title'|trans }}{% endblock %}
{% block body %}
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        {{ 'list' | trans }}
                    </h3>
                </div>
            </div>
            <div class="m-portlet__head-tools">

                <ul class="m-portlet__nav">
                    {%  if is_granted('ROLE_ESTUDIANTE') %}
                    <li class="m-portlet__nav-item">
                        <a class="btn btn-sm btn-primary text-uppercase edicion active" data-href="{{ path('reservacion_pc_new') }}"
                           data-toggle="m-tooltip" data-placement="bottom" title="" data-original-title="{{ 'reservation_register_tooltip'|trans }}">
                            <i class="flaticon-add"></i> {{ 'register' |trans }}
                        </a>
                    </li>
                    {% endif %}
                    <li class="m-portlet__nav-item">
                        <a class="btn btn-sm btn-default text-uppercase" data-href="{{ path('reservacion_pc_index') }}" id="refrescar">
                            <i class="flaticon-refresh"></i> {{ 'refresh' |trans }}
                        </a>
                    </li>

                </ul>
            </div>
        </div>
        <div class="m-portlet__body">
            {% include 'reservacion_pc/_table.html.twig' %}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% include 'reservacion_pc/script.js.twig' %}
    <script>
        var total ={{ reservaciones |length }}
            reservacionpc.init();
    </script>
{% endblock %}
