{% extends 'layout/autenticado.html.twig' %}
{% block title %}{{ 'machine_time'|trans }}{% endblock %}
{% block page_title %}{{ 'machine_times' | trans }}{% endblock page_title %}
{% block body %}
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        {{ 'list' | trans }}
                    </h3>
                </div>
            </div>
            <div class="m-portlet__head-tools">
                <ul class="m-portlet__nav">
                    <li class="m-portlet__nav-item">
                        <a class="btn btn-sm btn-default text-uppercase" data-href="{{ path('tiempo_maquina_index') }}" id="refrescar">
                            <i class="flaticon-refresh"></i>{{ 'refresh' |trans }}
                        </a>
                    </li>
                    <li class="m-portlet__nav-item">
                        <a class="btn btn-sm btn-primary text-uppercase edicion active" data-href="{{ path('tiempo_maquina_new') }}"
                           data-toggle="m-tooltip" data-placement="bottom" title="" data-original-title="{{ 'machine_time_register_tooltip' | trans }}">
                            <i class="flaticon-add"></i> {{ 'register' |trans }}
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="m-portlet__body">
            {% include 'tiempo_maquina/_table.html.twig' %}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% include 'tiempo_maquina/script.js.twig' %}
    <script>
        var total ={{ tiempo_maquinas |length }}
            tiempo_maquina.init();
    </script>
{% endblock %}