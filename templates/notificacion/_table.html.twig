<table class="table table-hover m-table m-table--head-separator-brand" id="notificacion_table">
    <thead>
    <tr>
        <th>
            #
        </th>
        <th>
            {{ 'description_field'|trans }}
        </th>
        <th>
            {{ 'date_field'|trans }}
        </th>
        <th>
        </th>
    </tr>
    </thead>
    <tbody>
    {%set i=1%}
    {% for notificacion in notificacions %}
        <tr>
            <td>{{ i }}</td>
            <td>{{ notificacion.descripcion }}</td>
            <td>{{ notificacion.fecha |date('d-m-Y H:i') }}</td>
            <td>
                <ul class="m-nav m-nav--inline m--pull-right">
                    <li class="m-nav__item">
                        <a class="btn  btn-sm text-uppercase notificacion_show" data-href="{{ path('notificacion_show', { 'id': notificacion.id }) }}" >
                            <i class="flaticon-eye"></i>{{ 'visualize' |trans }}</a>
                    </li>
                    
                    <li class="m-nav__item">
                        <a class="btn btn-danger btn-sm text-uppercase  eliminar_notificacion" data-href="{{ path('notificacion_delete', { 'id': notificacion.id }) }}">
                            <i class="flaticon-delete-1"></i>{{ 'delete' |trans }}</a>
                    </li>
                </ul>
            </td>
        </tr>
        {%set i=1+i%}
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <th>
            #
        </th>
        <th>
            {{ 'description_field'|trans }}
        </th>
        <th>
            {{ 'date_field'|trans }}
        </th>
        <th>
        </th>
    </tr>
    </tfoot>
</table>
