{% extends 'layout/autenticado.html.twig' %}
{% block title %}{{ 'peripheral'|trans }}{% endblock %}
{% block page_title %}{{ 'peripherals' | trans }}{% endblock page_title %}
{% block body %}
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <span class="m-portlet__head-icon"><i class="flaticon-list-3"></i></span>
                    <h3 class="m-portlet__head-text">
                        {{ 'list' | trans }}
                    </h3>
                </div>
            </div>
            <div class="m-portlet__head-tools">
                <ul class="m-portlet__nav">
                    <li class="m-portlet__nav-item">
                        <a class="btn btn-sm btn-default" data-href="{{ path('periferico_index') }}" id="refrescar">
                            <i class="flaticon-refresh"></i>{{ 'refresh' |trans }}
                        </a>
                    </li>
                    <li class="m-portlet__nav-item">
                        <a class="btn btn-sm btn-primary edicion active" data-href="{{ path('periferico_new') }}"
                           data-toggle="m-tooltip" data-placement="bottom" title="" data-original-title="{{ 'peripheral_register_tooltip' | trans }}">
                            <i class="flaticon-add"></i> {{ 'register' |trans }}
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="m-portlet__body">
            {% include 'periferico/_table.html.twig' %}
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% include 'periferico/script.js.twig' %}
    <script>
        var total={{ perifericos |length  }}
            periferico.init();
    </script>
{% endblock %}