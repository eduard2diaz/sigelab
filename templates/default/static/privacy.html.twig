                <div class="col-md-5">
                    <p>{{ 'privacy.section2_parragraph'|trans({},'estatica') }}</p>
                </div>
                <div class="col-md-5">
                    <p><b>{{ 'privacy.section2_details'|trans({},'estatica') }}</b></p>
                </div>
            </div>
            <h4>2.{{ 'privacy.section3_header'|trans({},'estatica') }}</h4>
