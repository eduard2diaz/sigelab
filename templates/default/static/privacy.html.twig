                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <h4>1. {{ 'privacy.epigraph'|trans({},'estatica') }}</h4>
            <h4>{{ 'privacy.section1_header'|trans({},'estatica') }}</h4>
            <div class="row">
                <div class="col-md-5">
                    <p>{{ 'privacy.section1_parragraph'|trans({},'estatica') }}</p>
                </div>
                <div class="col-md-5">
                    <p><b>{{ 'privacy.section1_details'|trans({},'estatica') }}</b></p>
                </div>
            </div>
            <h4>{{ 'privacy.section2_header'|trans({},'estatica') }}</h4>
