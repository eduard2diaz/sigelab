                <div class="col-md-5">
                    <p>{{ 'privacy.section3_parragraph'|trans({},'estatica') }}</p>
                </div>
                <div class="col-md-5">
                    <p><b>{{ 'privacy.section3_details'|trans({},'estatica') }}</b></p>
                </div>
            </div>
            <h4>3.{{ 'privacy.section4_header'|trans({},'estatica') }}</h4>
            <div class="row">
                <div class="col-md-5">
                    <p>{{ 'privacy.section4_parragraph'|trans({},'estatica') }}</p>
                </div>
                <div class="col-md-5">
                    <p>
                        <b>
                            {{ 'privacy.section4_details'|trans({},'estatica') }}
