{% extends is_granted('IS_AUTHENTICATED_FULLY') ? 'layout/autenticado.html.twig':  'layout/anonimo.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/page/estatica.css','milab') }}"/>
{% endblock stylesheets %}
{% block body %}
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        {{ 'privacypolicy'| trans }}
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <section>
                <h3>{{ 'privacypolicy.section1_header' | trans({},'estatica')}}</h3>
                <div class="row">
                    <div  class="col-md-6">
                        <p>{{ 'privacypolicy.section1_parragraph' | trans({},'estatica')}}   </p>
                    </div>
                </div>
            </section>
            <section>
                <h3>{{ 'privacypolicy.section2_header' | trans({},'estatica')}}</h3>
                <div class="row">
                    <div class="col-md-6">
                        <p>{{ 'privacypolicy.section2_parragragraph1' | trans({},'estatica')}}</p>
                        <h4>{{ 'privacypolicy.section2_subsection1.header' | trans({},'estatica')}}</h4>
                        <p>{{ 'privacypolicy.section2_subsection1.parragraph' | trans({},'estatica')}}</p>
                    </div>
                    <div class="col-md-6">
                        <blockquote class="pull-right">
                            <p>{{ 'privacypolicy.section2_details' | trans({},'estatica')}}</p>
                        </blockquote>

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <h4>{{ 'privacypolicy.section2_subsection2.header' | trans({},'estatica')}}</h4>
                        <p>{{ 'privacypolicy.section2_subsection2.parragraph' | trans({},'estatica')}}</p>
                    </div>
                    <div class="col-md-6">
                        <blockquote class="pull-right">
                            <p>{{ 'privacypolicy.section2_subsection2.details' | trans({},'estatica')}}</p>
                        </blockquote>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <h4>{{ 'privacypolicy.section2_subsection3.header' | trans({},'estatica')}}</h4>
                        <p>{{ 'privacypolicy.section2_subsection3.parragraph' | trans({},'estatica')}}</p>
                    </div>
                    <div class="col-md-6">
                        <blockquote class="pull-right">
                            <p>{{ 'privacypolicy.section2_subsection3.details' | trans({},'estatica')}}</p>
                        </blockquote>
                    </div>

                </div>
            </section>
        </div>
    </div>
{% endblock %}
