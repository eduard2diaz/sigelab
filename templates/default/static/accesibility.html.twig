{% extends is_granted('IS_AUTHENTICATED_FULLY') ? 'layout/autenticado.html.twig':  'layout/anonimo.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/page/estatica.css','milab') }}"/>
{% endblock stylesheets %}
{% block body %}
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        {{ 'accesibility'| trans }}
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <h4>{{ 'accesibility.header'|trans({},'estatica') }}</h4>
            <div class="row">
                <div class="col-md-7">
                    <p class="text-justify">{{ 'accesibility.parragraph'|trans({},'estatica') }}</p>
                </div>
                <div class="col-md-offset-1 col-md-4">
                    <ul class="list-unstyled text-center uppercase bold">
                        <li>{{ 'accesibility.choice1'|trans({},'estatica') }}</li>
                        <li style="font-size: 200%">{{ 'accesibility.choice2'|trans({},'estatica') }}</li>
                        <li>{{ 'accesibility.choice3'|trans({},'estatica') }}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}