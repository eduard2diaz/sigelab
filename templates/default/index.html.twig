{% extends 'layout/anonimo.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
   <link rel="stylesheet" type="text/css" href="{{ asset('assets/milab/css/page/login.min.css') }}"/>
{% endblock %}
{% block body %}
    <div class="login-form">
        <div class="col-md-5">
            {% if error is defined and error is not empty %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
                    {{ error.message |trans }}
                </div>

            {% endif %}
            <form action="{{ path('check') }}"  method="POST" class="m-form m-form--state">
                <div class="m-portlet__body">
                    <div class="m-form__section">
                        <div class="form-group m-form__group">
                            <label for="_username">
                                {{ 'loginform_username_placeholder' | trans }}
                            </label>
                            <div class="m-input-icon m-input-icon--left">
                                <input class="form-control m-input" placeholder="{{ 'loginform_username_placeholder' | trans}}" id="_username" name="_username"
                                       required="required" type="text" value="{{ last_username }}">
                                <span class="m-input-icon__icon m-input-icon__icon--left">
													<span><i class="la la-user"></i></span>
												</span>
                            </div>
                        </div>
                        <div class="form-group m-form__group">
                            <label for="_password">
                                {{ 'Contrase√±a' | trans }}
                            </label>
                            <div class="m-input-icon m-input-icon--left">
                                <input class="form-control m-input" placeholder="{{ 'loginform_password_placeholder' | trans}}" id="_password" name="_password"
                                       required="required" type="password">
                                <span class="m-input-icon__icon m-input-icon__icon--left">
													<span><i class="la la-key"></i></span>
												</span>
                            </div>
                        </div>
                        <div class="form-group m-form__group">
                            <label class="m-checkbox">
                                <input type="checkbox" name="remember" value="1"/>{{ 'loginform_rememberme_placeholder' | trans}}<span></span>
                            </label>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-sm btn-success">
                    {{ 'loginform_submit_button' |trans }}
                </button>
                <button type="reset" class="btn btn-sm btn-secondary">
                    {{ 'cancel_button' | trans }}
                </button>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </form>
        </div>
    </div>
    <div class="promo promo1">
    </div>
    <div class="promo promo2">
        <div class="row">
            <div class="col-md-6"></div>
            <div class="col-md-6">
                <h2>{{ 'promo1_title1' |trans }}</h2>
                <h3>{{ 'promo1_title2' |trans }}</h3>
                <!--<ul class="m-footer__nav m-nav m-nav--inline">
                    <li class="m-nav__item">
                        <a href="https://github.com/eduard2diaz/milab" class="m-nav__link text-white">
                            <i class="flaticon-rocket"></i> {{ 'promo1_ad1' |trans }}
                        </a>
                    </li>
                    <li class="m-nav__item">
                        <a href="http://www.facebook.com" class="m-nav__link  text-white">
                            <i class="flaticon-information"></i> {{ 'promo1_ad2' |trans }}
                        </a>
                    </li>
                </ul>-->
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('scripts/page/login.js','milab') }}"></script>
    <script>
        login.init();
    </script>
{% endblock javascripts %}