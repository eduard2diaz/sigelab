<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">{{ 'piece_details'|trans }}</h4>
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        </div>
        <div>
            <table class="table">
                <tr>
                    <th>{{ 'name_field'|trans }}</th>
                    <td>{{ pieza.nombre }}</td>
                </tr>
                <tr>
                    <th>{{ 'properties'|trans }}</th>
                    <td>
                        <ul>
                        {% for propiedad in pieza.idpropiedad %}
                            <li>{{ propiedad }}</li>
                        {% endfor %}
                        </ul>
                    </td>
                </tr>
            </table>
        </div>
        <div class="modal-footer">
            <a class="btn btn-sm btn-primary" data-dismiss="modal">{{ 'close'|trans }}</a>
        </div>
    </div>
</div>