{% extends 'layout/autenticado.html.twig' %}
{% block title %}{{ 'typeofrepair' | trans }}{% endblock %}
{% block page_title %}{{ 'typeofrepairs' | trans }}{% endblock page_title %}
{% block body %}
    <div class="m-portlet m-portlet--mobile">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <span class="m-portlet__head-icon"><i class="flaticon-list-3"></i></span>
                    <h3 class="m-portlet__head-text">
                        {{ 'list' | trans }}
                    </h3>
                </div>
            </div>
            <div class="m-portlet__head-tools">
                <ul class="m-portlet__nav">
                    <li class="m-portlet__nav-item">
                        <a class="btn btn-sm btn-default text-uppercase" data-href="{{ path('tiporeparacion_index') }}" id="refrescar">
                            <i class="flaticon-refresh"></i>{{ 'refresh' |trans }}
                        </a>
                    </li>
                    <li class="m-portlet__nav-item">
                        <a class="btn btn-sm btn-primary text-uppercase edicion active" data-href="{{ path('tiporeparacion_new') }}"
                           data-toggle="m-tooltip" data-placement="bottom" title="" data-original-title="{{ 'typeofrepair_register_tooltip' | trans }}">
                            <i class="flaticon-add"></i> {{ 'register' |trans }}
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="m-portlet__body">
            <!--begin: Datatable -->
            {%include 'tiporeparacion/_table.html.twig'%}
            <!--end: Datatable -->
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% include 'tiporeparacion/script.js.twig' %}
    <script>
        var total={{ tiporeparaciones |length  }}
        tiporeparacion.init();
    </script>
{% endblock %}