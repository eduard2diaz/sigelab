{{form_start(form,{'attr':{
     'id': form_id|default('tiporeparacion_new'),
    'class': 'm-form m-form--state'
}})}}
<div class="modal-body" id="modal-body">
<div class="row">
    <div class="col-md-12">
        <div class="form-group m-form__group">
            <label>
                {{ form_label(form.nombre) }}
            </label>
            <div>
                {{ form_widget(form.nombre) }}
                {{ form_errors(form.nombre) }}
            </div>
        </div>
    </div>
    </div>
</div>
<div class="modal-footer">
    <a class="btn btn-metal btn-sm" data-dismiss="modal"><i class="flaticon-cancel"></i> {{ 'cancel_button'| trans }}</a>
    <button class="btn btn-sm btn-primary ladda-button" data-style="expand-right" type="submit"><i class="flaticon-edit"></i> {{ action |default('save_button') | trans}}</button>
</div>
{{form_end(form)}}

