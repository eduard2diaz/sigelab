{% extends 'layout/autenticado.html.twig' %}
{% block page_title %}{{ 'users'|trans }} {% endblock %}
{% block body %}
    {{parent()}}
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        {{ 'list' | trans }}
                    </h3>
                </div>
            </div>
            <div class="m-portlet__head-tools">

                <ul class="m-portlet__nav">
                    <li class="m-portlet__nav-item">
                        <a class="btn btn-sm btn-primary text-uppercase edicion active" data-href="{{ path('usuario_new') }}"
                           data-toggle="m-tooltip" data-placement="bottom" title="" data-original-title="{{ 'user_register_tooltip'|trans }}">
                            <i class="la la-user-plus"></i> {{ 'register' |trans }}
                        </a>
                    </li>
                    <li class="m-portlet__nav-item">
                        <a class="btn btn-sm btn-default text-uppercase" data-href="{{ path('usuario_index') }}" id="refrescar">
                            <i class="flaticon-refresh"></i> {{ 'refresh' |trans }}
                        </a>
                    </li>

                </ul>
            </div>
        </div>
        <div class="m-portlet__body">
            {% include 'usuario/_table.html.twig' %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% include 'usuario/script.js.twig' %}
    <script>
        var total ={{usuarios |length }}
            usuario.init();
    </script>
{% endblock %}
