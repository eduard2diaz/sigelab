{{ form_start(form,{'attr':{
    'id': form_id|default('usuario_new'),
    'class': 'm-form m-form--state'
}}) }}
<div class="modal-body" id="modal-body">
    <div class="row">
        <div class="col-md-3">
            <div class="m-card-profile">
                <div class="m-card-profile__title m--hide">
                    Your Profile
                </div>
                <div class="m-card-profile__pic">
                    <div class="m-card-profile__pic-wrapper">
                        {% if usuario.rutaFoto!=null %}
                            {% set rutaFoto=  asset('archivos/'~usuario.rutaFoto) %}
                        {% else %}
                            {% set rutaFoto= asset('img/facebook_perfil.jpg','milab') %}
                        {% endif %}

                        <img src="{{ rutaFoto }}" alt="No se pudo cargar la imagen" id="foto_perfil"
                             data-image="{{ rutaFoto }}" data-toggle="m-tooltip" data-placement="top"
                             title="" data-original-title="Cambiar foto de perfil"/>

                    </div>
                    {{ form_widget(form.file) }}
                    {{ form_errors(form.file) }}
                </div>
                <div class="m-card-profile__details">
                    <a id="reload_picture"
                       class="btn m-btn btn-sm btn-danger text-uppercase m--font-bold m--hidden-desktop"><i
                                class="flaticon-delete-1"></i> {{ 'removephoto'| trans }}</a>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="row pull-right">
    <span class="m-switch m-switch--icon m-switch--success pull-right">
				<label>
					{{ form_widget(form.activo) }}
                    <span></span>
			</label>
    </span>
            </div>
            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group m-form__group">
                        <label>
                            {{ form_label(form.nombre) }}
                        </label>
                        <div>
                            {{ form_widget(form.nombre) }}
                            {{ form_errors(form.nombre) }}
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group m-form__group">
                        <label>
                            {{ form_label(form.apellido) }}
                        </label>
                        <div>
                            {{ form_widget(form.apellido) }}
                            {{ form_errors(form.apellido) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="row margin-top-10">
                <div class="col-md-6">
                    <div class="form-group m-form__group">
                        <label>
                            {{ form_label(form.facultad) }}
                        </label>
                        <div>
                            {{ form_widget(form.facultad) }}
                            {{ form_errors(form.facultad) }}
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group m-form__group">
                        <label>
                            {{ form_label(form.correo) }}
                        </label>
                        <div>
                            {{ form_widget(form.correo) }}
                            {{ form_errors(form.correo) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="row margin-top-10 margin-bottom-5">
                <div class="col-md-6">
                    <div class="form-group m-form__group">
                        <label>
                            {{ form_label(form.usuario) }}
                        </label>
                        <div>
                            {{ form_widget(form.usuario) }}
                            {{ form_errors(form.usuario) }}
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group m-form__group">
                        <label>
                            {{ form_label(form.idrol) }}
                        </label>
                        <div>
                            {{ form_widget(form.idrol) }}
                            {{ form_errors(form.idrol) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="row margin-top-10">
                <div class="col-md-6">
                    <div class="form-group m-form__group">
                        <label>
                            {{ form_label(form.password.first) }}
                        </label>
                        <div>
                            {{ form_widget(form.password.first) }}
                            {{ form_errors(form.password.first) }}
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group m-form__group">
                        <label>
                            {{ form_label(form.password.second) }}
                        </label>
                        <div>
                            {{ form_widget(form.password.second) }}
                            {{ form_errors(form.password.second) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<div class="modal-footer">
    <a class="btn btn-sm btn-metal" data-dismiss="modal"><i class="flaticon-cancel"></i> {{ 'cancel_button'|trans }}</a>
    <button class="btn btn-sm btn-primary ladda-button" data-style="expand-right" type="submit">
        <i class="flaticon-edit-1"></i>
        <span class="ladda-label">{{ action |default('save_button') |trans }}</span>
        <span class="ladda-spinner"></span>
    </button>
</div>
{{ form_end(form) }}